{
	"compilerOptions": {
		"types": [
			"vite/client"
		],
		"module": "CommonJS",
		"moduleResolution": "Node",
		"target": "ES5",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": false,
		"noEmit": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"baseUrl": "./ts",
		"rootDir": "./ts",
		"outDir": "./resources/js",
		"sourceMap": true,
		"paths": {
			"@/*": [
				"*"
			]
		}
	},
	"include": [
		"ts/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
